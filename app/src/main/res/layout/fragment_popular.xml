<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="300dp"
    tools:context=".popular">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="none"
        android:nestedScrollingEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="300dp"
                app:cardCornerRadius="50dp"
                android:backgroundTint="#79eaee"
                android:layout_marginLeft="35dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:src="@drawable/cake1"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ferrero Roacher"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="220dp"/>

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹650"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="255dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="300dp"
                app:cardCornerRadius="50dp"
                android:backgroundTint="#ff488a"
                android:layout_marginLeft="35dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:src="@drawable/cake7"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fudge Cake"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="220dp"/>

                <TextView
                    android:id="@+id/textView40"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹180"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="255dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="300dp"
                app:cardCornerRadius="50dp"
                android:backgroundTint="#79eaee"
                android:layout_marginLeft="35dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:src="@drawable/cake8"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vanilla Pastry"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="220dp"/>

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹150"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="255dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="250dp"
                android:layout_height="300dp"
                app:cardCornerRadius="50dp"
                android:backgroundTint="#ff488a"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="25dp">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:src="@drawable/cake2"/>
                </androidx.cardview.widget.CardView>


                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hazelnut Cake"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="220dp"/>

                <TextView
                    android:id="@+id/textView44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹500"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-smallcaps"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="255dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>